  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <id>shade-extension</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>org.apache.arrow</include>
                  <include>org.apache.fury</include>
                  <include>com.google.flatbuffers</include>
                </includes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>org.apache.arrow</pattern>
                  <shadedPattern>org.apache.flink.formats.fury.shaded.org.apache.fury.shaded.org.apache.arrow</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>com.google.flatbuffers</pattern>
                  <shadedPattern>org.apache.flink.formats.fury.shaded.org.apache.fury.shaded.com.google.flatbuffers</shadedPattern>
                </relocation>
                <relocation>
                  <pattern>org.apache.fury</pattern>
                  <shadedPattern>org.apache.flink.formats.fury.shaded.org.apache.fury</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
